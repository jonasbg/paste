{
	"name": "Go",
	"image": "mcr.microsoft.com/devcontainers/go:1-1.23-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "none"
		}
	},
	"runArgs": [
		"--userns=keep-id"
	],
	"containerUser": "vscode",
	"updateRemoteUserUID": true,
	"containerEnv": {
		"HOME": "/home/vscode"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"dbaeumer.vscode-eslint",
				"svelte.svelte-vscode",
				"qwtel.sqlite-viewer",
				"ms-kubernetes-tools.vscode-kubernetes-tools"
			]
		}
	},
	"portsAttributes": {
		"8080": {
			"onAutoForward": "ignore"
		}
	},
	"postCreateCommand": "mkdir -p web/static && cp \"$(go env GOROOT)/misc/wasm/wasm_exec.js\" web/static/ && cd web && npm install && cd .. && GOOS=js GOARCH=wasm go build -o web/static/encryption.wasm ./wasm/wasm.go"
}